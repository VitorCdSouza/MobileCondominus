<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelaLogin.Views.Dependentes.DependenteCadView"
             Title="Visitante/Colaborador">
    <StackLayout VerticalOptions="Center" Padding="20">

        <!-- Espaço para o logotipo -->

        <!-- Espaço em branco no topo para ajustar a posição da imagem -->
        <BoxView HeightRequest="50" Color="Transparent" />

        <!-- Caixa de texto e label para E-Mail -->
        <StackLayout Spacing="5">
            <Label Text="Nome:" TextColor="Black" FontAttributes="Bold" Margin="26, 0, 0, 0"/>
            <Border Stroke="Pink"
                StrokeThickness="0"
                WidthRequest="300"
                HeightRequest="33"
                Margin="0, 0, 0, 0"
                HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Entry BackgroundColor="White" Text ="{Binding Nome}" FontSize="13" HeightRequest="33" WidthRequest="300"/>
            </Border>
        </StackLayout>

        <!-- Espaço em branco no topo para ajustar a posição da imagem -->
        <BoxView HeightRequest="15" Color="Transparent" />
        <!-- Caixa de texto e label para Senha -->
        <StackLayout Spacing="5">
            <Label Text="CPF:" TextColor="Black" FontAttributes="Bold" Margin="26, 0, 0, 0"/>
            <Border Stroke="Pink"
                StrokeThickness="0"
                WidthRequest="300"
                HeightRequest="33"
                Margin="0, 0, 0, 0"
                HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Entry IsPassword="True" BackgroundColor="White" Text="{Binding Cpf}" FontSize="10" HeightRequest="33" />
            </Border>
        </StackLayout>
        <StackLayout Spacing="5">
            <Label Text="RG:" TextColor="Black" FontAttributes="Bold" Margin="26, 0, 0, 0"/>
            <Border Stroke="Pink"
                StrokeThickness="0"
                WidthRequest="300"
                HeightRequest="33"
                Margin="0, 0, 0, 0"
                HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Entry IsPassword="True" BackgroundColor="White" Text="{Binding Rg}" FontSize="10" HeightRequest="33"/>
            </Border>
        </StackLayout>
        <StackLayout Spacing="5">
            <Label Text="Finalidade/Função:" TextColor="Black" FontAttributes="Bold" Margin="26, 0, 0, 0"/>
            <Border Stroke="Pink"
                StrokeThickness="0"
                WidthRequest="300"
                HeightRequest="33"
                Margin="0, 0, 0, 0"
                HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Entry IsPassword="True" BackgroundColor="White" Text="{Binding Finalidade}" FontSize="10" HeightRequest="33" />
            </Border>
        </StackLayout>
        <StackLayout Spacing="5">
            <Label Text="Data de Nascimento:" TextColor="Black" FontAttributes="Bold" Margin="26, 0, 0, 0"/>
            <Border Stroke="Pink"
                StrokeThickness="0"
                WidthRequest="300"
                HeightRequest="33"
                Margin="0, 0, 0, 0"
                HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Entry IsPassword="True" BackgroundColor="White" Text="{Binding Nascimento}" FontSize="10" HeightRequest="33"/>
            </Border>
        </StackLayout>
        <Label Text="Telefone:" TextColor="Black" FontAttributes="Bold" Margin="26, 0, 0, 0"/>

            <StackLayout Spacing="0">
                <Border Stroke="Pink"
                StrokeThickness="0"
                WidthRequest="300"
                HeightRequest="33"
                Margin="0, 0, 0, 0"
                HorizontalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>
                    <Entry BackgroundColor="White" Text="{Binding Telefone}" FontSize="12" HeightRequest="33" Placeholder="9 ****-****" />
                </Border>

        </StackLayout>
        <StackLayout Spacing="5">
            <Label Text="Observações:" TextColor="Black" FontAttributes="Bold" Margin="26, 0, 0, 0"/>
            <Border Stroke="Pink"
                StrokeThickness="0"
                WidthRequest="300"
                HeightRequest="33"
                Margin="0, 0, 0, 0"
                HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Entry IsPassword="True" BackgroundColor="White" Text="{Binding Observacoes}" FontSize="10" HeightRequest="33"/>
            </Border>
        </StackLayout>
        <StackLayout Spacing="5">
            <Label Text="Data:" TextColor="Black" FontAttributes="Bold" Margin="26, 0, 0, 0"/>
            <Border Stroke="Pink"
                StrokeThickness="0"
                WidthRequest="300"
                HeightRequest="33"
                Margin="0, 0, 0, 0"
                HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Entry IsPassword="True" BackgroundColor="White" Text="{Binding Data}" FontSize="10" HeightRequest="33" />
            </Border>
        </StackLayout>

        <!-- Espaço em branco no topo para ajustar a posição da imagem -->
        <BoxView HeightRequest="40" Color="Transparent" />
        <StackLayout Orientation="Horizontal" Spacing="57" Background="Transparent" HeightRequest="70" HorizontalOptions="Center">
            <!-- Botão de Novar Reserva -->
            <Button Text="Cancelar"  BorderWidth="1" BorderColor="#039298" FontAttributes="Bold" Pressed="OnButtonClicked" BackgroundColor="white" Command="{Binding AutenticarCommand}" TextColor="black" HorizontalOptions="Start"  CornerRadius="20" WidthRequest="150" HeightRequest="45"/>

            <!-- Espaço em branco no topo para ajustar a posição da imagem -->
            <!-- Botão de Editar -->
            <Button Text="Confirmar" FontAttributes="Bold" Command="{Binding PostAcessoCommand}" Pressed="OnButtonClicked2"  TextColor="black" HorizontalOptions="End" BackgroundColor="white" BorderWidth="1"  BorderColor="#039298" CornerRadius="20" HeightRequest="45" WidthRequest="150"/>
        </StackLayout>
        <!-- Espaço em branco no topo para ajustar a posição da imagem -->
    </StackLayout>
</ContentPage>